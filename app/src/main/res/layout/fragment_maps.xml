<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.MapsFragment"
android:background="@color/light_blue_600">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_maps">

    </androidx.fragment.app.FragmentContainerView>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/idSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/search_menu"
        app:searchHintIcon="@drawable/baseline_location_on_24"
        android:imeOptions="actionGo"
        android:inputType="textPostalAddress"
        app:searchIcon="@drawable/baseline_location_arvag_color"
        app:iconifiedByDefault="false"
        app:queryHint="@string/map_search_hint"
        app:queryBackground="@android:color/transparent"
        app:autoShowKeyboard="true"
        />

</FrameLayout>